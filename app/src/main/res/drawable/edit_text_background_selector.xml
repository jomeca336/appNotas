<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#2F000000" /> <!-- Color cuando está enfocado -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#1E1D1D"/> <!-- Borde -->
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="#2F000000" /> <!-- Color cuando no está enfocado -->
            <corners android:radius="18dp" />
            <stroke android:width="2dp" android:color="#1E1D1D"/> <!-- Borde -->
        </shape>
    </item>
</selector>